<h1>New song</h1>

<% form_for(@song) do |f| %>
  <%= f.hidden_field '_rev' unless @song.new_record
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', songs_path %>
